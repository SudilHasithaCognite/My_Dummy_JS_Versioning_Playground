{
  "version": "independent",
  "useNx": true,
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": ["main", "release-*"],
      "message": "chore(release): publish [skip ci]",
      "conventionalCommits": true,
      "createRelease": "github"
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]"
    }
  }
}
